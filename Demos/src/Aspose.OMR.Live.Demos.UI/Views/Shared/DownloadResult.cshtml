@model ResourcesModel

<div id="DownloadPlaceHolder" class="hidden">
    <div class="filesendemail">
        <div class="filesuccess">
            <label class="dz-message needsclick" id="SuccessMessage">@Model.Resources[Model.SuccessMessageKey]</label>
            <span class="downloadbtn convertbtn full-width">
                <a href="" id="DownloadButton" class="btn btn-success btn-lg btn-block">@Model.Resources["DownLoadNow"] &nbsp;<i class="fa fa-download"></i></a>
            </span>
            <div class="clearfix">&nbsp;</div>
            <div id="viewerplaceholder" class="hidden">
                <span class="viewerbtn full-width">
                    <a href="" id="ViewerButton" target="_blank" class="btn btn-success btn-lg btn-block">@Model["ViewNow"]&nbsp;<i class="fa fa-eye"></i></a>
                </span>
                <div class="clearfix">&nbsp;</div>
            </div>
            <a href="" class="btn btn-link refresh-c">@Model.Resources[Model.AnotherFileKey] &nbsp;<i class="fa-refresh fa"></i></a>
        </div>

        <p>@Model.Resources["SendTo"]</p>
        <div class="col-5 sendemail">
            <div class="input-group input-group-lg">
                <input type="email" id="EmailToInput" name="EmailToInput" class="form-control" placeholder="email@domain.com" value="@Model.EmailTo" />
                <input type="hidden" id="DownloadUrlInputHidden" name="DownloadUrlInput" />
                <span class="input-group-btn">
                    <a class="btn btn-success" type="button" id="sendEmailButton">
                        <i class="fa fa-envelope-o fa"></i>
                    </a>
                </span>
            </div>
        </div>
        <p class="bookmarklet">@Model.Resources["BookmarkTextDownload"]</p>
    </div>
</div>

@section scripts {

}